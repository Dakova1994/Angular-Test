.container{
    width: 800px;
    min-width: 800px;
    padding: 10px 40px;
    align-content: center;
}

.menu{
    margin: 10px 10px 10px 10px;
    font-size: 20px;
    font-family: Arial, Helvetica, sans-serif;
    text-align: left;
    padding: 20px;
    border-bottom-color: grey;
    border-bottom-style: solid;
    border-bottom-width: 1px;
}

.panel{
    border: solid;
    border: seagreen;
    padding: 10px 20px;
    font-size: 30px;
    display: inline-block;
    position: relative;
    float: left;
    width: 44%;
    height: 400px;

}
.panel__card__photo{
    width: 65px;
    float: left;
}
.panel__elements{
    padding: 20px;
    font-size: 18px;
}

.panelOption{
    padding-top: 30px;
}

.remainingCards{
    text-align: center;
    margin: 20px;
    font-size: 15px;
}

.showCards{
    font-size: 18px;
    text-align: center;
    border-left: grey;
    border-left-style: solid;
    border-left-width: 1px;
    padding-left: 10px;
    height: 450px;
}

.drawButton{
    padding: 30px;

}